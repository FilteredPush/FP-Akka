        <dependency>
        	<groupId>com.typesafe.akka</groupId>
        	<artifactId>akka-slf4j_2.10</artifactId>
        	<version>2.1.4</version>
        </dependency>
        <dependency>
        	<groupId>args4j</groupId>
        	<artifactId>args4j</artifactId>
